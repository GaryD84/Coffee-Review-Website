{% extends '_base.html.twig' %}

{% block title %}new user{% endblock %}

{% block main %}
    <h1>
        *New User*
    </h1>

    <form action="/" method="post">
        <input type="hidden" name="action" value="processNewUser">
        <input type="hidden" name="module" value="admin">


        <p>
            username:
            <label>
                <input name="username">
            </label>
        <p>
            password:
            <label>
                <input name="password">
            </label>
        <p>
            <input type="submit">
    </form>

{% endblock %}